pipeline {
    agent any

    stages {
        stage("Build & SonarQube Scanner") {
            steps {
                script {
                    withSonarQubeEnv('SonarCloud') {
                        // Navigate to the project directory
                        dir('jenkins/POV-JAVA') {
                            // Run Maven commands
                            bat 'mvn clean package sonar:sonar'
                        }
                    }
                }
            }
        }
    }
}
